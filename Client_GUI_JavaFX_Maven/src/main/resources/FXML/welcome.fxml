<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" styleClass="vbox" fx:id="root" fx:controller="MyController"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600" prefWidth="600"
      stylesheets="@welcome.css">

    <!-- Welcome Message -->
    <Label text="Welcome to 3 Card Poker!" styleClass="welcome-title"/>

    <!-- Image Section -->
    <ImageView fitWidth="500" fitHeight="300">
        <Image url="@/IMAGES/design/front.png" />
    </ImageView>

    <!-- Server Connection Section -->
    <VBox spacing="10" alignment="CENTER">
        <!-- Port Input Field -->
        <TextField fx:id="portField" promptText="Enter Port Number" styleClass="custom-text-field"/>

        <!-- Connect Button -->
        <Button fx:id="connectButton" text="Start Server" onAction="#connectToServer" styleClass="custom-button"/>
    </VBox>

    <!-- Buttons -->
    <VBox spacing="20" alignment="CENTER">
        <Button fx:id="rulesButton" text="Rules" onAction="#rulesButtonMethod" styleClass="secondary-button"/>
        <Button fx:id="exitButton" text="Exit" onAction="#exitButtonMethod" styleClass="secondary-button"/>
    </VBox>

</VBox>
