<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button.*?>
<?import javafx.scene.control.Label.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<AnchorPane fx:id="root" fx:controller="MyController" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" prefHeight="400" prefWidth="600">

    <VBox alignment="CENTER_LEFT" spacing="30" AnchorPane.topAnchor="550">
        <TextField fx:id="portTextField" promptText="Enter Port Number" prefWidth="300"
                   AnchorPane.leftAnchor="190" AnchorPane.topAnchor="400"/>

        <Button fx:id="startButton" text="Start Server" prefWidth="300" AnchorPane.leftAnchor="190" AnchorPane.topAnchor="600" onAction="#startServer"/>
    </VBox>

    <HBox alignment="CENTER" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label fx:id="serverStat" styleClass="info-section"/>
    </HBox>

</AnchorPane>